{
  //clientin buraya gelmesi ve buradan root olayı yapacağız. diğer kanallara burası yönlendirecek
  "Routes": [
    //Product API
    {
      "DownstreamPathTemplate": "/api/v1/Product", //gelen istek nereye yönlendireceği
      "DownstreamScheme": "http", //hangi yönetm ile gelecek
      "DownstreamHostAndPorts": [ //hangi projeye gideceği
        {
          "Host": "esourcingproducts", //gideceği proje adı,docker-compose yml baktığımızda esourcingproducts olarak yazılmış. docker bunu tanıyacak
          "Port": "80" //kullanıcağı port
        }
      ],
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ], //üç tane servisin adları aynıydı. hangi yöntem olduğnu ayırmak için kullandık
      "UpstreamPathTemplate": "/Product" //hangi http isteği yapacağı. Api de arkada versiyonları değişsse bile ön tarafta aynı path de gelmesini sağlıyor
    },
    {
      "DownstreamPathTemplate": "/api/v1/Product/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "esourcingproducts",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Product/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    //Sourcing API
    //Auction
    {
      "DownstreamPathTemplate": "/api/v1/Auction",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "esourcingsourcing",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Auction",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Auction/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "esourcingsourcing",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Auction/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Auction/CompleteAuction/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "esourcingsourcing",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Auction/CompleteAuction/{id}",
      "UpstreamHttpMethod": [ "POST" ]
    },
    //Bid
    {
      "DownstreamPathTemplate": "/api/v1/Bid",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "esourcingsourcing",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Bid",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Bid/GetBidsByAuctionId/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "esourcingsourcing",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Bid/GetBidsByAuctionId/{id}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Bid/GetWinnerBid/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "esourcingsourcing",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Bid/GetWinnerBid/{id}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    //Order API
    {
      "DownstreamPathTemplate": "/api/v1/Order/GetOrdersByUserName/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "esourcingsourcing",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Order/GetOrdersByUserName/{userName}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Order",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "esourcingsourcing",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Order",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ]
}
